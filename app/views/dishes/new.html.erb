<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Proposer un plat</h1>
            <%= simple_form_for(@dish) do |f| %>
        <%= f.error_notification %>

        <%= f.input :name, label: 'Votre plat', placeholder: "Poulet braisé" %>
        <%= f.input :description, label: 'Des commentaires ?', placeholder: "Ingrédients, conseils ?" %>

        <%= f.button :submit, label: "Ajouter votre plat", class: "btn btn-primary" %>

      <% end %>




    </div>
  </div>
</div>
